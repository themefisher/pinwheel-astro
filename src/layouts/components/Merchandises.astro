---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import Merchandise from "@/layouts/function-components/Merchandise";
const { main_feature } = Astro.props;
const { title, description, merch_list } = main_feature;
---

<section class="section key-feature relative">
  <Image
    class="absolute left-0 top-0 -z-[1] -translate-y-1/2"
    src="/images/feature-shape.png"
    height={126}
    width={63}
    alt=""
  />
  <div class="container">
    <div class="row justify-between text-center lg:text-start">
      <div class="lg:col-5">
        <h2 set:html={markdownify(title)} />
      </div>
      <div class="mt-6 lg:col-5 lg:mt-0">
        <p set:html={markdownify(description)} />
      </div>
    </div>
    <Merchandise merch_list={merch_list} client:load />
  </div>
</section>
